<html>
  <head>
    <title>Chitter</title>
  </head>

  <body>
    <% if current_user %>
      Welcome to Chitter <%= current_user.username %>
    <% end %>
    <% if flash[:errors] %>
    <div id='notice'>
    <% flash[:errors].each do |error| %>
    <%=error %><br>
    <% end %>
    </div>
    <% end %>
    <%= yield %>
  </body>
</html>
