<html>
  <head>
    <title>Chitter</title>
  </head>

  <body>
    <% if current_user %>
      Welcome to Chitter <%= current_user.username %>
      <form action="/sessions" method="post" >
        <input type ="hidden" name="_method" value="delete">
        <input type ="submit" value ="Sign out">
      </form>
    <% else %>
    <form action="/sessions/new">
      <input type ="submit" value ="Sign in to Chitter">
    </form>
    <% end %>

    <% if flash[:errors] %>
      <div id="notice">
        <% flash[:errors].each do |error| %>
          <%=error %><br>
        <% end %>
      </div>
    <% end %>

    <% if flash[:notice] %>
      <div id="notice">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
