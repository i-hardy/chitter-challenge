<html>
  <head>
    <title>Chitter</title>
    <link rel="stylesheet" type="text/css" href="/layout.css">
  </head>

  <body>
    <center><% if current_user %>
      <label><p>Welcome to Chitter <%= current_user.username %></p></label>
      <form action="/sessions" method="post" >
        <input type ="hidden" name="_method" value="delete">
        <button type="submit">Sign out</button>
      </form>
    <% else %>
    <form action="/sessions/new">
      <button type="submit">Sign in to Chitter</button>
    </form>
    <% end %>

    <% if flash[:errors] %>
      <div id="notice">
        <% flash[:errors].each do |error| %>
          <label><p><%=error %></p></label>
        <% end %>
      </div>
    <% end %>

    <% if flash[:notice] %>
      <div id="notice">
        <label><p><%= flash[:notice] %></p></label>
      </div>
    <% end %></center>

    <%= yield %>
  </body>
</html>
